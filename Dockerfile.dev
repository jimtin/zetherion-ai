FROM python:3.12-slim

WORKDIR /app

# Install system dependencies including watchfiles requirements
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY requirements.txt requirements-dev.txt ./

# Install all dependencies including dev and create data directory
RUN pip install --no-cache-dir -r requirements-dev.txt && \
    mkdir -p /app/data

# Set Python path
ENV PYTHONPATH=/app/src

# Source will be mounted as volume for hot reload
CMD ["python", "-m", "watchfiles", "python -m secureclaw", "./src"]
